# WireGuard Split Tunnel Configuration for VDS by Selectel
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# Selectel VDS API Configuration (for auto server control)
# ============================================
# Get API token from: Selectel Control Panel → API → Tokens
# This enables automatic VDS start/stop when connecting/disconnecting VPN
SELECTEL_API_TOKEN=your_selectel_api_token_here
SELECTEL_SERVER_ID=your_vds_server_id_here

# ============================================
# Server Configuration (optional, auto-detected if not set)
# ============================================
# Server public IP address (auto-detected if empty)
# Selectel VDS will have Russian IP address
SERVER_IP=

# Server network interface (auto-detected if empty)
# Examples: eth0, ens3, enp0s3
SERVER_INTERFACE=

# WireGuard port (default: 51820)
WG_PORT=51820

# VPN network (default: 10.0.0.0/24)
VPN_NETWORK=10.0.0.0/24

# Server VPN IP (default: 10.0.0.1)
SERVER_VPN_IP=10.0.0.1

# ============================================
# Client Configuration (optional)
# ============================================
# DNS servers for clients (default: 8.8.8.8)
CLIENT_DNS=8.8.8.8

# ============================================
# SSH Configuration (optional)
# ============================================
# SSH port (default: 22)
SSH_PORT=22

# Maximum SSH authentication attempts (default: 3)
SSH_MAX_AUTH_TRIES=3

# SSH login grace time in seconds (default: 30)
SSH_LOGIN_GRACE_TIME=30

# ============================================
# Firewall Configuration (optional)
# ============================================
# Enable automatic firewall configuration (default: true)
ENABLE_FIREWALL=true

# ============================================
# Security Settings (optional)
# ============================================
# Enable SSH security hardening (default: true)
ENABLE_SSH_SECURITY=true

# Enable IP forwarding (default: true)
ENABLE_IP_FORWARDING=true
